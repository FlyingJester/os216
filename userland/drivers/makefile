# Check the autogenerated list of driver targets.
.include "driver_config.mk"

all:
.for target in $(DRIVERS)
	$(MAKE) -C $(target) ROOT=${ROOT} PARALLEL=${PARALLEL}
.endfor

package:
.for target in $(DRIVERS)
	$(MAKE) -C $(target) package ROOT=${ROOT} PARALLEL=${PARALLEL}
.endfor

clean:
.for target in $(DRIVERS)
	$(MAKE) -C $(target) clean
.endfor

.PHONY: $(ALL_DRIVERS) clean package
.IGNORE: clean
.SILENT: package
